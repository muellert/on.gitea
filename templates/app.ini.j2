APP_NAME = Gitea
RUN_USER = {{ gitea_user }}
RUN_MODE = prod

[database]
# DB_TYPE  = sqlite3
DB_TYPE  = {{ db_type }}
HOST     = {{ db_host }}
NAME     = {{ db_name }}
USER     = {{ db_user }}
PASSWD   = {{ db_pass }}
SSL_MODE = disable
# PATH     = data/gitea.db

[repository]
ROOT = {{ gitea_repo_root }}
FORCE_PRIVATE = true

[server]

PROTOCOL         = {{ http_port }}

HTTP_ADDR        = {{ http_addr }}
HTTP_PORT        = {{ http_port }}
ROOT_URL         = {{ http_protocol }}://{{ http_urlhost }}/{{ url_path | default('') }}
DISABLE_SSH      = false
SSH_PORT         = {{ ssh_port }}

LFS_START_SERVER = false
OFFLINE_MODE     = false

START_SSH_SERVER = {{ ssh_start_server }}
SSH_DOMAIN       = {{ ssh_host }}


[mailer]
ENABLED = false

[service]
REGISTER_EMAIL_CONFIRM     = false
ENABLE_NOTIFY_MAIL         = false
DISABLE_REGISTRATION       = false
ENABLE_CAPTCHA             = false
REQUIRE_SIGNIN_VIEW        = false
DEFAULT_KEEP_EMAIL_PRIVATE = false
NO_REPLY_ADDRESS           = noreply.example.com

[picture]
DISABLE_GRAVATAR        = true
ENABLE_FEDERATED_AVATAR = false

[session]
PROVIDER = {{ gitea_session_provider }}
PROVIDER_CONFIG = {{ gitea_session_provider_config }}
COOKIE_SECURE = {{ gitea_session_cookie_secure }}


[log]
MODE      = {{ gitea_log_mode }}
LEVEL     = {{ gitea_log_level }}
ROOT_PATH = {{ gitea_log_dir }}

[security]
INSTALL_LOCK = true
SECRET_KEY   = {{ gitea_secret }}

